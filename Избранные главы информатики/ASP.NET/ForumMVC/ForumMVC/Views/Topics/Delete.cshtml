@model ForumMVC.Models.TopicEdit

@{
    ViewBag.Title = "Удаление темы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <h3>@ViewBag.Title</h3>
        <h4>Вы действительно хотите удалить тему?</h4>
        <p>@Html.DisplayFor(model => model.Name)</p>
        <small>@Html.DisplayFor(model => model.Content)</small>
        <br />
        <br />
        @using (Html.BeginForm()) {
        <p>
            @Html.HiddenFor(model => model.Id)
            <input type="submit" value="Удалить" class="btn btn-default" />
        </p>
        }
    <p>
        <a href="~/Topics/List/@Model.RubricId">К списку тем</a>
    </p>
    </div>
</div>
