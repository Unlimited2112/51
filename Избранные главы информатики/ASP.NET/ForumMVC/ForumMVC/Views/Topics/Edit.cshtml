@model ForumMVC.Models.TopicEdit

@{
    ViewBag.Title = "Редактирование темы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <h3>@ViewBag.Title</h3>
@using (Html.BeginForm()) {

    @Html.ValidationSummary(true, "", new { @class = "alert alert-warning" })
    
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        <span class="help-block">
            @Html.ValidationMessageFor(model => model.Name)
        </span>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Content, new { @class = "control-label" })
        @Html.TextAreaFor(model => model.Content, 5, 50, new { @class = "form-control" })
        <span class="help-block">
            @Html.ValidationMessageFor(model => model.Content)
        </span>
    </div>
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.RubricId)
    <input type="submit" value="Сохранить" class="btn btn-default" />
}

    <p>
        <a href="~/Topics/List/@Model.RubricId">К списку тем</a>
    </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
