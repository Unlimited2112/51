@{
    ViewBag.Title = "Разделы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@ViewBag.Title</h3>
@if (User.IsInRole("Admin"))
{
<p>
    <a href="~/Default/Create" class = "btn btn-default btn-sm"><span class="glyphicon glyphicon-plus"></span> Добавить</a>
</p>
}

@if (ViewBag.Rubrics != null)
{
    foreach (var item in ViewBag.Rubrics)
    {
    <div class="row rubric-list">
        <div class="col-xs-11">
            <a href="~/Topics/List/@item.Id">@item.Name</a>
        </div>
        <div class="col-xs-1 text-right">
        @if (User.IsInRole("Admin"))
        {
            <a href="~/Default/Edit/@item.Id" class = "btn btn-default btn-sm"><span class="glyphicon glyphicon-pencil"></span></a>
        }
        </div>
    </div>
    }
}
else
{
    <p class="alert alert-info">Разделы пока не созданы...</p>
}
