@model ForumMVC.Models.ChangePasswordModel

@{
    ViewBag.Title = "Изменение пароля";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <h3>@ViewBag.Title</h3>
@using (Html.BeginForm())
{

    @Html.ValidationSummary(true, "", new { @class = "alert alert-warning" })

    <div class="form-group">
        @Html.LabelFor(model => model.PasswordOld, new { @class = "control-label" })
        @Html.PasswordFor(model => model.PasswordOld, new { @class = "form-control" })
        <span class="help-block">
            @Html.ValidationMessageFor(model => model.PasswordOld)
        </span>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.Password, new { @class = "control-label" })
        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
        <span class="help-block">
            @Html.ValidationMessageFor(model => model.Password)
        </span>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PasswordConfirm, new { @class = "control-label" })
        @Html.PasswordFor(model => model.PasswordConfirm, new { @class = "form-control" })
        <span class="help-block">
            @Html.ValidationMessageFor(model => model.PasswordConfirm)
        </span>
    </div>
    @Html.HiddenFor(model => model.UserId)
    <input type="submit" value="Изменить пароль" class="btn btn-default" />
}
    <p>
        <a href="~/Account/Profile/@User.Identity.Name">К профилю</a>
    </p>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
